<body>
<div class="container">
  <div class="tabs is-boxed">
    <ul>
      <li class="is-active" id="login-tab"><a>Login</a></li>
      <li id="signup-tab"><a>Signup</a></li>
    </ul>
  </div>

  <div id="login-panel">
    <div class="panel">
      <p class="panel-heading">Login</p>
      <div class="panel-block">
        <form class="control has-icons-left">
          <div class="field">
            <p class="control has-icons-left">
              <input class="input" type="text" id="username-login" placeholder="Username">
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <input class="input" type="password" id="password-login" placeholder="Password">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control">
              <button class="button is-success" type="submit">Login</button>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div id="signup-panel" style="display:none;">
    <div class="panel">
      <p class="panel-heading">Signup</p>
      <div class="panel-block">
        <form class="control">
          <div class="field">
            <p class="control has-icons-left">
              <input class="input" type="text" id="username-signup" placeholder="Username">
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <input class="input" type="password" id="password-signup" placeholder="Password">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control">
              <button class="button is-success" type="submit">Signup</button>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
</body>